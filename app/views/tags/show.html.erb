<% @articles.each do |article| %>
    <br/>
    <br/>
    <%= article.title %>
    <br/>
    <%= article.content %>
    <br/>
    <%= raw (article.tags.map { |t| (link_to t.name, tag_path(t), class: 'article_tag') }.join(' , ')) + '.' %>
    <br/><br/>
    <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-inverse' %>
    <%= link_to 'Delete', article_path(article), method: 'delete', confirm: 'Are you sure?', class: 'btn btn-danger' %>

<% end %>